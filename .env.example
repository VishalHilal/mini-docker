# Mini-Docker Environment Configuration

# Engine Configuration
ENGINE_PORT=8080
ENGINE_HOST=0.0.0.0

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Registry Configuration
REGISTRY_PATH=/tmp/mini-docker

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Development Configuration
DEV_MODE=false
HOT_RELOAD=false

# Security Configuration
ENABLE_TLS=false
TLS_CERT_PATH=
TLS_KEY_PATH=

# Performance Configuration
MAX_CONTAINERS=100
MAX_MEMORY=1g
MAX_CPU=2
