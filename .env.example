# Mini-Docker Environment Configuration

# Engine Configuration
ENGINE_PORT=8080
ENGINE_HOST=0.0.0.0

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Registry Configuration
REGISTRY_PATH=/tmp/mini-docker

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Development Configuration
DEV_MODE=false
HOT_RELOAD=false

# Security Configuration
ENABLE_TLS=false
TLS_CERT_PATH=
TLS_KEY_PATH=

# Performance Configuration
MAX_CONTAINERS=100
MAX_MEMORY=1g
MAX_CPU=2

# Redis Configuration (Cache Profile)
REDIS_PORT=6379
REDIS_PASSWORD=minidocker123

# PostgreSQL Configuration (Database Profile)
POSTGRES_PORT=5432
POSTGRES_DB=minidocker
POSTGRES_USER=minidocker
POSTGRES_PASSWORD=minidocker123

# Nginx Configuration (Proxy Profile)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Prometheus Configuration (Monitoring Profile)
PROMETHEUS_PORT=9090

# Grafana Configuration (Monitoring Profile)
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Jaeger Configuration (Tracing Profile)
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16
